<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDE4E9">

        <RadioButton
            style="@style/bottom_tab"
            android:drawableTop="@drawable/button_home_attention_selector"
            android:text="Discover" />

        <RadioButton
            style="@style/bottom_tab"
            android:drawableTop="@drawable/button_mytrace_attention_selector"
            android:text="Trace" />

        <RadioButton
            style="@style/bottom_tab"
            android:drawableTop="@drawable/button_friends_attention_selector"
            android:text="Friends" />

        <RadioButton
            style="@style/bottom_tab"
            android:drawableTop="@drawable/button_setting_attention_selector"
            android:text="Setting" />

    </RadioGroup>
</LinearLayout>